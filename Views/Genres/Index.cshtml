@model IEnumerable<fanfic.by.Models.Genre>

@{
    ViewData["Title"] = "Fanfic.by";
}
<h3>Жанры фанфиков</h3>
<p>
    <a asp-action="Create">Добавить жанр</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-right">
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>|
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

